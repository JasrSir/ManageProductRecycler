<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.limox.jesus.recicledview_application">

    <application
        android:name=".ProductApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login_Activity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Product_Activity" />
        <activity
            android:name=".ManageProduct_Activity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".settings.AccountSettings_Activity" />
        <activity android:name=".settings.GeneralSettings_Activity" />
        <activity
            android:name=".SignUp_Activity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>